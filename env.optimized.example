# ========================================
# ENHANCED MINT BOT CONFIGURATION v2.0
# ========================================

# ---- CORE SETTINGS ----
CONTRACT_ADDRESS=0xYourContractAddress
CHAIN=ethereum
MODE=multi_parallel

# ---- WALLETS ----
# Single wallet
#PRIVATE_KEY=0xYourPrivateKey
# Multi-wallet (comma separated)
PRIVATE_KEYS=0xkey1,0xkey2,0xkey3

# ---- CONTRACT ----
MINT_FUNC=mint
MINT_AMOUNT=1
MINT_PRICE=0.001
#MINT_ARGS_JSON=["1"]
#ABI_OVERRIDE=[{"inputs":[...],"name":"mint","outputs":[],"stateMutability":"payable","type":"function"}]

# ---- RPC CONFIGURATION ----
# Use fastest RPC as priority
#PRIORITY_RPC=https://your-fastest-rpc
#RPC_URLS=https://rpc1,https://rpc2,https://rpc3

# Provider keys (optional)
#INFURA_KEY=your_infura_key
#ALCHEMY_KEY=your_alchemy_key
#QUICKNODE_KEY=your_quicknode_key

# RPC settings
RPC_TIMEOUT_MS=3000
RPC_RETRY_COUNT=3

# ---- PERFORMANCE SETTINGS ----
# Adjust based on competition level
DYNAMIC_FEE_MULTIPLIER=1.3  # 1.1=efficient, 1.3=balanced, 2.0=competitive
AGGRESSIVE_GAS_BUMP=30      # 15=efficient, 30=balanced, 50=competitive
CONCURRENCY=8               # 4=efficient, 8=balanced, 12=competitive
RETRY_ATTEMPTS=10

# ---- GAS STRATEGY ----
#GAS_PRICE_GWEI=25
#MAX_FEE_GWEI=100
#MAX_PRIORITY_GWEI=5
MAX_FEE_CAP_GWEI=500
GAS_BUMP_PERCENT=25
GAS_LIMIT_BUFFER_PERCENT=25

# ---- TIMING ----
TX_DELAY_MS=0
JITTER_MS=50
RETRY_BACKOFF_MS=800
RETRY_BACKOFF_MULTIPLIER=1.4
WAIT_NEXT_BLOCK=false

# Scheduling (optional)
#START_AT_BLOCK=18500000
#START_AT_TIMESTAMP=1735689600000

# ---- NONCE MANAGEMENT ----
NONCE_STRATEGY=pending
#NONCE=0
NONCE_OFFSET=0
PRELOAD_NONCES=true

# ---- SUBMISSION MODE ----
SUBMIT_MODE=public  # public|flashbots

# Flashbots (for MEV protection)
#FLASHBOTS_RELAY=https://relay.flashbots.net
#FLASHBOTS_RELAYS=https://relay1,https://relay2
#FLASHBOTS_AUTH_KEY=0xYourAuthKey

# ---- MONITORING & SAFETY ----
MEMPOOL_MONITORING=true
CALLSTATIC_CHECK=true
BALANCE_CHECK=true
VERBOSE_LOGGING=true
DRY_RUN=false

# ========================================
# QUICK CONFIGS FOR DIFFERENT SCENARIOS
# ========================================

# ðŸ”¥ COMPETITIVE MODE (uncomment to use):
#DYNAMIC_FEE_MULTIPLIER=2.0
#AGGRESSIVE_GAS_BUMP=50
#CONCURRENCY=12
#SUBMIT_MODE=flashbots

# ðŸ’° EFFICIENT MODE:
#DYNAMIC_FEE_MULTIPLIER=1.1
#AGGRESSIVE_GAS_BUMP=15
#CONCURRENCY=4

# âš¡ SPEED MODE (single wallet):
#MODE=single
#PRIORITY_RPC=https://your-fastest-rpc
#MEMPOOL_MONITORING=true

# ========================================
# NOTES
# ========================================
# 1. Always test with DRY_RUN=true first
# 2. Use npm run benchmark to find fastest RPC
# 3. Use npm run monitor to check gas prices
# 4. Set MAX_FEE_CAP_GWEI for safety
# 5. Enable Flashbots for high-value mints